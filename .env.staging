NODE_ENV=staging
PORT=3001
CLIENT_URL=https://staging.fry-diagnosis-tool.com

# Database
DATABASE_URL=mongodb+srv://staging_user:staging_password@cluster.mongodb.net/fry-diagnosis-tool-staging?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://staging_user:staging_password@cluster.mongodb.net/fry-diagnosis-tool-staging?retryWrites=true&w=majority

# Authentication
SECRET=your-staging-secret-key-replace-this-in-staging
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=https://staging.fry-diagnosis-tool.com

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30000

# Socket.IO
SOCKET_CORS_ORIGIN=https://staging.fry-diagnosis-tool.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=75

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# SSL/HTTPS
SSL_CERT_PATH=/etc/nginx/ssl/staging-cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/staging-private.key

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true

# UX Testing
UX_TESTING_ENABLED=true
UX_TESTING_AUTO_COLLECT=true

# Database Optimization
DATABASE_OPTIMIZATION_ENABLED=true
DATABASE_AUTO_INDEX_CREATION=true

# Monitoring Dashboard
MONITORING_DASHBOARD_ENABLED=true

# Staging Specific
ADMIN_EMAIL=admin@staging.fry-diagnosis-tool.com
SUPPORT_EMAIL=staging-support@fry-diagnosis-tool.com
ERROR_REPORTING_ENABLED=true
DEBUG_MODE=false
