NODE_ENV=production
PORT=3001
CLIENT_URL=https://fry-diagnosis-tool.com

# Database
DATABASE_URL=mongodb+srv://production_user:production_password@cluster.mongodb.net/fry-diagnosis-tool-prod?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://production_user:production_password@cluster.mongodb.net/fry-diagnosis-tool-prod?retryWrites=true&w=majority

# Authentication

JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=https://fry-diagnosis-tool.com

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_LEVEL=warn
HEALTH_CHECK_INTERVAL=60000

# Socket.IO
SOCKET_CORS_ORIGIN=https://fry-diagnosis-tool.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined

# SSL/HTTPS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=true

# UX Testing
UX_TESTING_ENABLED=true
UX_TESTING_AUTO_COLLECT=true

# Database Optimization
DATABASE_OPTIMIZATION_ENABLED=true
DATABASE_AUTO_INDEX_CREATION=true

# Monitoring Dashboard
MONITORING_DASHBOARD_ENABLED=true

# Production Specific
ADMIN_EMAIL=admin@fry-diagnosis-tool.com
SUPPORT_EMAIL=support@fry-diagnosis-tool.com
ERROR_REPORTING_ENABLED=true
